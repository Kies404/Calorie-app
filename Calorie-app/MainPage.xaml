<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calorie_app.MainPage">

    <ScrollView>




    <VerticalStackLayout Padding="25" Spacing="15">

    <Label Text="Daily Calorie Tracker"
           FontSize="28"
           HorizontalOptions="Center" />

    <Entry x:Name="FoodEntry"
           Placeholder="Food name"
           FontSize="18"/>

    <Entry x:Name="CalorieEntry"
           Placeholder="Calories"
           Keyboard="Numeric"
           FontSize="18"/>

    <Button Text="Add"
            Clicked="OnAddClicked" />

    <Label Text="Today's Total:"
           FontSize="22" />

    <Label x:Name="TotalLabel"
           Text="0"
           FontSize="26"
           HorizontalOptions="Center" />

    <CollectionView x:Name="FoodList">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <HorizontalStackLayout Spacing="10">
                    <Label Text="{Binding Name}"
                           FontSize="18" />
                    <Label Text="{Binding Calories}"
                           FontSize="18" />
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</VerticalStackLayout>

    </ScrollView>

</ContentPage>
